<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="Emilrins_torso_BaseThing" ParentName="ApparelBase" Abstract="True">

  </ThingDef>
  
  <!-- ##### Armbinde ##### -->
  
  <ThingDef ParentName="Emilrins_torso_BaseThing">
    <defName>Emil_torso_armbinde</defName>
    <label>Armbinde</label>
    <description>An armband to induce fear to your enemy</description>
    <smeltable>true</smeltable>
	<tradeability>Sellable</tradeability>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <recipeMaker>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
		<li>HandTailoringBench</li>
      </recipeUsers>
	  <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/TorsoApp/Armbinde/Armbinde</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
	<techLevel>Industrial</techLevel>
    <costList>
      <Hyperweave>50</Hyperweave>
    </costList>
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <WorkToMake> 9500</WorkToMake>
      <Mass>0.2</Mass>
      <EquipDelay>0.12</EquipDelay>
    </statBases>
    <equippedStatOffsets>
	  <AimingDelayFactor>-0.2</AimingDelayFactor>
	  
    </equippedStatOffsets>
    <apparel>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
		<li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/TorsoApp/Armbinde/Armbinde</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialBasic</li>
      </tags>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
  </ThingDef>

</Defs>