<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="Emilrins_hat_BaseThing" ParentName="ApparelBase" Abstract="True">
    <relicChance>1.2</relicChance>

  </ThingDef>
  
  <!-- ##### Fuhrers Hat ##### -->
  
  <ThingDef ParentName="Emilrins_hat_BaseThing">
    <defName>Emil_hat_fuhrer</defName>
    <label>Fuhrers Hat</label>
    <description>A Peaked Cap for the Leader of your Colony</description>
    <smeltable>true</smeltable>
	<tradeability>Sellable</tradeability>
    <thingCategories>
      <li>HeadgearNoble</li>
    </thingCategories>
    <recipeMaker>
      <workSkill>Crafting</workSkill>
      <effectWorking>Tailor</effectWorking>
      <soundWorking>Recipe_Tailor</soundWorking>
      <recipeUsers>
        <li>ElectricTailoringBench</li>
		<li>HandTailoringBench</li>
      </recipeUsers>
	  <researchPrerequisite>Electricity</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/Headgear/FuhrersHat/nazihat</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <costList>
      <Gold>10</Gold>
      <Hyperweave>88</Hyperweave>
	  <Uranium>30</Uranium>
    </costList>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake> 26000</WorkToMake>
      <Mass>0.9</Mass>
      <EquipDelay>0.8</EquipDelay>
	  <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>1</SocialImpact>
      <SuppressionPower>0.15</SuppressionPower>
	  <NegotiationAbility>1</NegotiationAbility>
	  
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">0.2</SlaveSuppressionOffset>
    </equippedStatOffsets>
    <apparel>
      <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
      <countsAsClothingForNudity>false</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/Headgear/FuhrersHat/nazihat</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Royal</li>
        <li>RoyalTier7</li>
      </tags>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
    </apparel>
  </ThingDef>

